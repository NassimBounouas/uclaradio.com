      //should be executed right after
      //this removes buttons and associated lists of days without shows
      script.
        $(document ).ready(function() {
          var daysOfWeek = ['Sun','Mon','Tue','Wed','Thu','Fri','Sat'];
          var days = 7;
          //$("#mi-slider > ul").length
          for (var i = 1; i <= days; i++) {
              if($('#mi-slider ul:nth-child('+i+') li').length == 0)
              {
                  $("#mi-slider ul:nth-child("+i+")").remove();
                  $('#'+daysOfWeek[i-1]).remove();
                  daysOfWeek.splice(i, 1);
                  days = days-1;
                  i = i-1;
              };

          }
        });

      .footer
        .row

          #allShows
              each show in blurbs
